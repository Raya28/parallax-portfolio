---
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/rayo-icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	
	@font-face {
		font-family: 'Crilo';
		src: url(fonts/Crilo.ttf) format('truetype');
	}
	@font-face {
		font-family: 'Clash';
		src: url(fonts/ClashDisplay-Extralight.otf) format('opentype');
	}
	:root{
		--primary: #131313;
		--secondary: #E94F1B;
		--third: #F2BB16;
		--base: white;
	}
	body{
		background-image: url(fondo_1.webp);
		background-repeat: repeat;
		background-color: #131313;
		background-size: 100%;
	}
	html {
		font-family: 'Clash',system-ui, sans-serif;
		scroll-behavior: smooth;		
	}

</style>

